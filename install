#!/bin/bash

# This simple script downloads and installs a Minecraft server onto your computer/server.

server_link=https://piston-data.mojang.com/v1/objects/5b868151bd02b41319f54c8d4061b8cae84e665c/server.jar
server_run="java -Xmx1024M -Xms1024M -jar server.jar nogui"


# Check if Java is installed
check_java() {
    java_installed=false

    if command -v java &>/dev/null; then
        echo "Checking Java version..."
        java_version=$(java --version 2>&1)
        if [ $? -eq 0 ]; then
            java_installed=true
        else
            echo "Error: Java is not installed or an problem occurred while checking the version."
            exit
        fi
    else
        echo "Error: Java is not installed."
        exit
    fi
}

# Download the server.jar file from Mojang's official servers
server_download() {
    if [ "$java_installed" = true ]; then
        server_directory=~/server
        if [ -d "$server_directory" ]; then
            echo "Creating proper directories..."
            cd ~
            mkdir -p server
            cd server
            echo "Downloading server.jar..."
            wget -q "$server_link"
            if [ $? -eq 0 ]; then
                echo "Download successful."
            else
                echo "Download failed. Check your internet connection and try again."
                exit
            fi
        else
            echo "Creating proper directories..."
            mkdir -p "$server_directory"
            cd "$server_directory"
            echo "Downloading server.jar..."
            wget -q "$server_link"
            if [ $? -eq 0 ]; then
                echo "Download successful."
            else
                echo "Download failed. Check your internet connection and try again."
                exit
            fi
        fi
    else
        :
    fi
}


#Set up the server and accept the EULA
server_setup() {
    eula='eula=true'
    cd ~
    cd server
    echo "Running server.jar..."
    $server_run
    sleep 10
    echo "Accepting EULA..."
    echo "$eula" > "$server_directory/eula.txt"
    echo "Creating server..."
    cp ~/mc-server-install-script-main/start ~/mc-server-install-script-main/start
    mv ~/mc-server-install-script-main/start ~/server/start
    $server_run
}

check_java
server_download
server_setup
